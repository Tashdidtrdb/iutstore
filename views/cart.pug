head
  link(rel='stylesheet' type='text/css' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/cartstyle.css')
  title CART
nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        span.headleft IUT 
        span.headright STORE
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li
          a(href='/') Home
        li.dropdown
          a.dropdown-toggle(data-toggle='dropdown' href='#')
            | Categories
            span.caret
          ul.dropdown-menu
            li
                a(href='/product/?category=tshirt') T-Shirts
            li
                a(href='/product/?category=jacket') Jackets
            li
                a(href='/product/?category=hoodie') Hoodies
            li
                a(href='/product/?category=others') Others
        li
          a(href='/account') Account
        li
          a(href='/cart') Cart
.space
.table-responsive.container
  table.table
    thead.thead
      tr
        th(scope='col') #
        th(scope='col') Product_ID
        th(scope='col') Product Name
        th(scope='col') Price
        th(scope='col') Seller

    tbody
      each product in products
        tr
          th(scope='row') #
          td= product.product_id
          td= product.p_title
          td= product.price
          td= product.name


script(src='https://code.jquery.com/jquery-3.3.1.min.js')
script(type='text/javascript' src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
