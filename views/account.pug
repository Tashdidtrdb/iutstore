head
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet' type='text/css' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/accountstyle.css')
    title ACCOUNT
nav.navbar.navbar-default.navbar-fixed-top
    .container
        .navbar-header
            button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/')
                span.headleft IUT 
                span.headright STORE
        #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
                li
                    a(href='/') Home
                li.dropdown
                    a.dropdown-toggle(data-toggle='dropdown' href='#')
                        | Categories
                        span.caret
                    ul.dropdown-menu
                        li
                            a(href='/product/?category=tshirt') T-Shirts
                        li
                            a(href='/product/?category=jacket') Jackets
                        li
                            a(href='/product/?category=hoodie') Hoodies
                        li
                            a(href='/product/?category=others') Others
                li
                    a(href='#') Account
                li
                    a(href='/cart') Cart

h2(style='text-align:center') User Profile Card
.profilecard
    img(src='/img/account_img/profile.jpg' style='width:90%')
    h1= account.name
    p= `Phone: ${account.phone}`
    p= `Email: ${email}`
    p= `Address: ${account.address}`
    p
        button.addproduct(onclick="document.location='/add_product'") Add Product
    p
        button.myproducts(onclick="document.location='/cart/my_products'") My Products
    p
        button.logout(onclick="document.location='/account/logout'") Logout

script(src='https://code.jquery.com/jquery-3.3.1.min.js')
script(type='text/javascript' src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
